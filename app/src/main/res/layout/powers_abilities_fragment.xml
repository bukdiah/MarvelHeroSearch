<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/bioScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="8dp"
                android:id="@+id/tvPowersLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powers"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:padding="8dp"
                android:id="@+id/tvPowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_below="@id/tvPowersLabel"
                />

            <TextView
                android:padding="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Abilities"
                android:id="@+id/tvAbilitiesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPowers"
                />

            <TextView
                android:padding="8dp"
                android:id="@+id/tvAbilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_below="@id/tvAbilitiesLabel"
                />


        </RelativeLayout>

    </ScrollView>
</LinearLayout>